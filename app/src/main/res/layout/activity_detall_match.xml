<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".tversus.DetallMatch">



        <!-- Sección del equipo 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tversus"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/equipo1"
            android:layout_width="196dp"
            android:layout_height="625dp"
            android:layout_weight="1"

            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen del equipo 1 -->
            <TextView
                android:id="@+id/equip1TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo 1"
                android:textColor="@color/terciarytversus"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Nombre del equipo 1 -->

        </LinearLayout>

        <LinearLayout
            android:id="@+id/equipo2"
            android:layout_width="199dp"
            android:layout_height="626dp"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Imagen del equipo 2 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!-- Nombre del equipo 2 -->
            <TextView
                android:id="@+id/equip2TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Equipo 2"
                android:textColor="@color/terciarytversus"
                android:textSize="24sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <!-- Sección del equipo 2 -->

    <!-- Botón para seleccionar al ganador -->


</androidx.constraintlayout.widget.ConstraintLayout>