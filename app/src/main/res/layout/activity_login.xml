<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clParent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tversus">

    <ScrollView
        android:id="@+id/formView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/clParent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/tversus"
            android:paddingHorizontal="32dp">

            <Button
                android:id="@+id/buttonLoginGoogle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#FD3F57"
                android:text="Google"
                android:layout_marginTop="30dp"
                android:textColor="@color/tversus"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/btnToRegister" />

            <EditText
                android:id="@+id/editTextEmailLogin"
                android:layout_width="239dp"
                android:layout_height="54dp"
                android:layout_marginTop="70dp"
                android:backgroundTint="#FD4052"
                android:ems="10"
                android:foregroundTint="#FFFFFF"
                android:hint="Correo electronico"
                android:inputType="textPersonName"
                android:textColor="#FFFFFF"
                android:textColorHint="#F6F6F6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/imageView" />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="208dp"
                android:layout_height="167dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/editTextPasswordLogin"
                android:layout_width="239dp"
                android:layout_height="54dp"
                android:layout_marginTop="50dp"
                android:backgroundTint="#FD3F57"
                android:ems="10"
                android:hint="ContraseÃ±a"
                android:inputType="textPassword"
                android:textColor="#F6F6F6"
                android:textColorHint="#F6F6F6"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextEmailLogin" />

            <Button
                android:id="@+id/buttonLogin"
                android:layout_width="259dp"
                android:layout_height="41dp"
                android:layout_marginTop="35dp"
                style="@style/PrimaryButton"
                android:text="Entrar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/editTextPasswordLogin" />

            <Button
                android:id="@+id/btnToRegister"
                android:layout_width="259dp"
                android:layout_height="41dp"
                style="@style/PrimaryButton"
                android:text="Register"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/buttonLogin" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>