<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".src.ui.home.admin.functions_admin.FunctionsAdminFragment"
    android:background="@color/tversus">




    <TextView
        android:id="@+id/tvWhatUDo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/terciarytversus"
        android:text="Que quieres hacer?"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToListTournaments"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Listar torneos"
        style="@style/PrimaryButton"
        android:layout_marginTop="100dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvWhatUDo" />

    <Button
        android:id="@+id/btnToCreateOfficialTournament"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Crear torneo official"
        style="@style/PrimaryButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToListTournaments" />

    <Button
        android:id="@+id/btnToListUsers"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="Listar Usuarios"
        style="@style/PrimaryButton"
        android:layout_marginTop="50dp"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToCreateOfficialTournament" />




</androidx.constraintlayout.widget.ConstraintLayout>