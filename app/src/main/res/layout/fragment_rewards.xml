<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tversus"
    android:padding="32dp"
    tools:context=".src.ui.home.admin.functions_admin.rewards_admin.RewardsFragment">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recompensar jugadores"
        android:layout_marginTop="30dp"
        style="@style/basicText"
        android:textColor="@color/secondarytversus"
        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextUsernameReward"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:hint="Ganador"
        android:textAlignment="center"
        android:textColor="@color/terciarytversus"
        android:textColorHint="@color/shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/etReward"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Tokens"
        android:inputType="number"
        android:textAlignment="center"
        android:textColor="@color/terciarytversus"
        android:textColorHint="@color/shadow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvRewardPoints" />

    <EditText
        android:id="@+id/etReward2"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:hint="Confirmar Tokens"
        android:layout_marginTop="30dp"
        android:textSize="16dp"
        android:textAlignment="center"
        android:textColor="@color/terciarytversus"
        android:textColorHint="@color/secondarytversus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etReward" />

    <TextView
        android:id="@+id/tvRewardPoints"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        style="@style/basicText"
        android:textSize="20sp"
        android:textColor="@color/secondarytversus"
        android:text="Cuantos tokens vas a dar?"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextUsernameReward" />

    <Button
        android:id="@+id/bntSendRewards"
        style="@style/PrimaryButton"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rounded_button"
        android:text="Enviar Premio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etReward2" />

    <ProgressBar
        android:id="@+id/progressBarSearchPlayer"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>