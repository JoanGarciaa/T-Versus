<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/tversus"
    tools:context=".src.ui.home.tabs.tournament_tab.info_tournament.joined_tournament.JoinedTournamentFragment">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPlayers"
        android:layout_width="409dp"
        android:layout_height="488dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnToRounds"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="73dp"
        android:text="Ver Emparejamientos"
        style="@style/PrimaryButton"
        android:background="@drawable/rounded_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvPlayers" />

    <Button
        android:id="@+id/buttonAbrirTorneo"
        style="@style/PrimaryButton"
        android:layout_width="180dp"
        android:layout_height="51dp"
        android:background="@drawable/rounded_button"
        android:text="Comenzar torneo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnToRounds" />

</androidx.constraintlayout.widget.ConstraintLayout>