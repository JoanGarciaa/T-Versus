<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="280dp"
    android:layout_height="630dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_credit_card"
    android:layout_margin="12dp"
    android:outlineProvider="none"
    android:elevation="0dp"
    card_view:contentPadding="4dp"
    android:backgroundTint="@color/tversus"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tversus">

        <TextView
            android:id="@+id/nameShopItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/terciarytversus"
            android:text="Saco de tokens "
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            />

        <TextView
            android:id="@+id/valorItemShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="sans-serif-black"
            android:gravity="center"
            android:text="1000"
            android:textColor="@color/secondarytversus"
            android:textSize="30sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/ivShopItem" />

        <TextView
            android:id="@+id/vtokens100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-black"
            android:text="V-Tokens"
            android:textColor="@color/secondarytversus"
            android:textSize="30sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/valorItemShop" />

        <TextView
            android:id="@+id/priceItemShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"

            android:fontFamily="sans-serif-black"
            android:text="10 â‚¬"
            android:textColor="@color/terciarytversus"
            android:textSize="35sp"
            android:textStyle="italic"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/vtokens100" />

        <ImageView
            android:id="@+id/ivShopItem"
            android:layout_width="82dp"
            android:layout_height="81dp"
            android:layout_marginTop="110dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/nameShopItem"
            card_view:srcCompat="@drawable/ttokens" />

        <Button
            android:id="@+id/btnBuyTokens"
            style="@style/PrimaryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Comprar"
            card_view:layout_constraintBottom_toBottomOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/priceItemShop" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>