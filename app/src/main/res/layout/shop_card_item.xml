<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="320dp"
    android:layout_height="600dp"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_credit_card"
    android:layout_margin="12dp"
    android:outlineProvider="none"
    android:elevation="0dp"
    card_view:contentPadding="4dp"
    android:backgroundTint="@color/tversus"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tversus">

        <TextView
            android:id="@+id/nameShopItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/terciarytversus"
            android:text="Saco de tokens "
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="30dp"
            android:textSize="30sp"
            android:fontFamily="sans-serif-black"
            />

        <TextView
            android:id="@+id/valorItemShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1000"
            android:fontFamily="sans-serif-black"
            android:textSize="30sp"
            android:gravity="center"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintBottom_toTopOf="@id/vtokens100"
            android:textColor="@color/secondarytversus"
            />

        <TextView
            android:id="@+id/vtokens100"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@color/secondarytversus"
            android:fontFamily="sans-serif-black"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="100dp"
            card_view:layout_constraintBottom_toBottomOf="parent"
            android:text="V-Tokens"
            />

        <TextView
            android:id="@+id/priceItemShop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 â‚¬"
            android:textColor="@color/terciarytversus"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="20dp"
            android:textSize="35sp"
            android:fontFamily="sans-serif-black"
            card_view:layout_constraintBottom_toBottomOf="parent"
            />

        <ImageView
            android:id="@+id/ivShopItem"
            android:layout_width="179dp"
            android:layout_height="178dp"
            android:layout_marginTop="30dp"
            card_view:layout_constraintBottom_toTopOf="@+id/valorItemShop"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/nameShopItem"
            card_view:srcCompat="@drawable/logo" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>