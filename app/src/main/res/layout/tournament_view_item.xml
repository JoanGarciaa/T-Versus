<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_view_credit_card"
    android:layout_width="280dp"
    android:layout_height="200dp"
    android:layout_margin="12dp"
    android:backgroundTint="@color/tversus"
    android:elevation="0dp"
    android:outlineProvider="none"
    card_view:contentPadding="4dp">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/tversus">

        <TextView
            android:id="@+id/tvPriceTournament"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/ivCreditCard"
            android:text="1000"
            android:textColor="@color/secondarytversus"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="190dp"
            />


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/tvOrganizerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="JoanAsecas"
            android:textSize="14dp"
            android:textColor="@color/terciarytversus"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="175dp"
            card_view:layout_constraintTop_toBottomOf="@id/ivCreditCard"
            />
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Competitivo 1v1"
            android:textColor="@color/terciarytversus"
            android:layout_marginRight="150dp"
            android:layout_marginTop="5dp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@+id/tvOrganizerName" />

        <ImageView
            android:id="@+id/ivCreditCard"
            android:layout_width="match_parent"
            android:layout_height="132dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toTopOf="parent"
            card_view:srcCompat="@drawable/valotourn" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
