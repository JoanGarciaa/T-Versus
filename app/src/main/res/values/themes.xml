<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TVERSUS" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
    <style name="Theme.TVERSUS.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.TVERSUS.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.TVERSUS.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PrimaryButton" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/terciarytversus</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/secondarytversus</item>
    </style>

    <style name="ButtonChoose" parent="Widget.MaterialComponents.Button">
        <item name="android:textSize">12sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textColor">@color/tversus</item>
        <item name="android:gravity">center</item>
        <item name="backgroundTint">@color/terciarytversus</item>
    </style>

    <style name="FormTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:gravity">center_vertical</item>
        <item name="errorEnabled">true</item>
        <item name="android:textColorHint">@color/terciarytversus</item>
        <item name="boxStrokeColor">@color/secondarytversus</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="errorTextColor">@color/teal_700</item>
        <item name="hintTextColor">@color/terciarytversus</item>
    </style>

    <style name="FormEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/terciarytversus</item>
        <item name="singleLine">true</item>
        <item name="maxLines">1</item>
        <item name="android:textColorHint">@color/terciarytversus</item>
    </style>

    <style name="basicText">
        <item name="android:textColor">@color/terciarytversus</item>
        <item name="android:textSize">16sp</item>
    </style>


</resources>